#!/usr/bin/expect -f

set timeout 120
spawn shopify app dev --store=kakastory.myshopify.com

expect {
    "*password*" {
        send "millie\r"
        exp_continue
    }
    "*Preview*" {
        interact
    }
    "*running*" {
        interact
    }
    "*building*" {
        interact
    }
    timeout {
        puts "Timeout waiting for prompt"
        exit 1
    }
    eof {
        puts "Process ended unexpectedly"
        exit 1
    }
}