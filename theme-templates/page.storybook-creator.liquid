<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page.title }} | {{ shop.name }}</title>
  
  <!-- Shopify Theme CSS -->
  {{ content_for_header }}
  
  <!-- Custom Storybook Styles -->
  <style>
    /* Loading Animation */
    .storybook-loading {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 60vh;
      padding: 2rem;
    }
    
    .loading-spinner {
      width: 50px;
      height: 50px;
      border: 4px solid #f3f4f6;
      border-top: 4px solid #6366f1;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-bottom: 1rem;
    }
    
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    
    .storybook-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 1rem;
    }
    
    /* Hide initially until React loads */
    #storybook-app-root {
      min-height: 80vh;
    }
    
    .loading-text {
      font-size: 1.1rem;
      color: #6b7280;
      text-align: center;
    }
  </style>
</head>
<body>
  <!-- Shopify Header (if theme has one) -->
  {% if template contains 'page' %}
    {% section 'header' %}
  {% endif %}

  <main class="storybook-container">
    <!-- Page Header -->
    <div class="page-header" style="text-align: center; margin-bottom: 2rem;">
      <h1 style="font-size: 2.5rem; margin-bottom: 1rem; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
        {{ page.title | default: "Create Your AI Storybook" }}
      </h1>
      <p style="font-size: 1.2rem; color: #6b7280; max-width: 600px; margin: 0 auto;">
        {{ page.content | default: "Create magical, personalized adventure stories featuring your child as the hero!" }}
      </p>
    </div>

    <!-- React App Container -->
    <div id="storybook-app-root" 
         data-shop-domain="{{ shop.permanent_domain }}"
         data-api-endpoint="https://{{ request.host }}/apps/kaka-8/api"
         data-customer-id="{% if customer %}{{ customer.id }}{% else %}guest{% endif %}"
         data-customer-email="{% if customer %}{{ customer.email }}{% endif %}">
      
      <!-- Loading State -->
      <div class="storybook-loading" id="storybook-loading">
        <div class="loading-spinner"></div>
        <div class="loading-text">
          <h3>Loading AI Storybook Creator...</h3>
          <p>Preparing the magical story creation experience...</p>
        </div>
      </div>
    </div>
  </main>

  <!-- Shopify Footer (if theme has one) -->
  {% if template contains 'page' %}
    {% section 'footer' %}
  {% endif %}

  <!-- React Dependencies -->
  <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
  
  <!-- Framer Motion for animations -->
  <script src="https://unpkg.com/framer-motion@10/dist/framer-motion.js"></script>
  
  <!-- Our bundled React app -->
  <script>
    // Global configuration
    window.STORYBOOK_CONFIG = {
      shopDomain: "{{ shop.permanent_domain }}",
      apiEndpoint: "https://{{ request.host }}/apps/kaka-8/api",
      customerId: "{% if customer %}{{ customer.id }}{% else %}guest{% endif %}",
      customerEmail: "{% if customer %}{{ customer.email }}{% endif %}",
      isAuthenticated: {% if customer %}true{% else %}false{% endif %},
      debug: {{ settings.debug_mode | default: false }}
    };
  </script>
  <script src="{{ 'storybook-app-bundle.js' | asset_url }}" defer></script>

  <!-- Analytics (optional) -->
  {% if settings.enable_analytics %}
  <script>
    // Track page view
    if (window.gtag) {
      gtag('event', 'page_view', {
        page_title: 'AI Storybook Creator',
        page_location: window.location.href
      });
    }
  </script>
  {% endif %}
</body>
</html>
